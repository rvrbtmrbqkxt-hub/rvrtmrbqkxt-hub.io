            font-size: 24px;
            margin-bottom: 20px;
            color: #333;
        }
        .options-area {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        .option-btn {
            padding: 15px 20px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            background-color: #4CAF50;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        .option-btn:hover {
            background-color: #45a049;
        }
        .option-btn.disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }
        .result-area {
            margin-top: 20px;
            font-size: 20px;
            display: none;
            padding: 15px;
            border-radius: 5px;
        }
        .result-correct {
            background-color: #dff0d8;
            color: #3c763d;
        }
        .result-wrong {
            background-color: #f2dede;
            color: #a94442;
        }
        .error-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: #000;
            display: none;
            justify-content: center;
